<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_reset"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:elevation="50dp"
        android:text="HEISENBERG"
        app:backgroundTint="#EDD710"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_launcher_foreground"
        app:iconPadding="-5dp"
        app:iconSize="70dp"
        app:iconTint="#ED0B0B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_click_me"
        app:layout_constraintVertical_bias="0.683" />

    <Button
        android:id="@+id/btn_click_me"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:layout_marginBottom="135dp"
        android:elevation="50dp"
        android:text="CLICK ME"
        app:backgroundTint="#E80808"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_launcher_foreground"
        app:iconSize="70dp"
        app:iconTint="#F6DD03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037"
        app:srcCompat="@mipmap/bitch" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNTER"
        app:layout_constraintBottom_toTopOf="@+id/btn_click_me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>